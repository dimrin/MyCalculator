<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foggy_grey"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="bottom|end"
        android:padding="10dp"
        android:text=""
        android:textSize="48sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/month_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInput"
        app:rowCount="5">


        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/seven"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/eight"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/nine"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_symbols"
            android:layout_margin="10dp"
            android:onClick="onOperator"
            android:text="@string/divide"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/four"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/five"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/six"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_symbols"
            android:layout_margin="10dp"
            android:onClick="onOperator"
            android:text="@string/multiply"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button

            android:id="@+id/buttonThree"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/three"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/two"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/one"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_symbols"
            android:layout_margin="10dp"
            android:onClick="onOperator"
            android:text="@string/minus"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDecimalPoint"
            android:text="@string/dot"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onDigit"
            android:text="@string/zero"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonClr"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_symbols"
            android:onClick="onClear"
            android:text="@string/clr"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_symbols"
            android:layout_margin="10dp"
            android:onClick="onOperator"
            android:text="@string/plus"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_equal"
            android:layout_margin="10dp"
            android:onClick="onEqual"
            android:text="@string/equal"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_symbols"
            android:layout_margin="10dp"
            android:onClick="onOperator"
            android:text="@string/percent"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonDoubleZero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_numbers"
            android:layout_margin="10dp"
            android:onClick="onEqual"
            android:text="@string/doubleZero"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button_symbols"
            android:layout_margin="10dp"
            android:onClick="onEqual"
            android:text="@string/backspace"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="0" />


    </androidx.gridlayout.widget.GridLayout>

